@model FirstShop.Core.ViewModels.Products.CategoryViewModel
@inject FirstShop.Core.Services.Products.Category.ICategoryServices _CategoryServices
@{
    var Category = _CategoryServices.GetAllICategories().ToList();

}

<section class="product_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Categories
        </h2>
      </div>
      <div class="row">
          @for(int i = 0; i <= Category.Take(2).Count(); i++)
          {
            <div class="col-sm-4 col-lg-4">
                <div class="box">
                <div class="img-box">
                    <img src="/Images/@Category[i].CategoryImage" alt="Product Image"/>
                    <a href="" class="add_cart_btn">
                    <span>
                        Go to category
                    </span>
                    </a>
                </div>
                <div class="detail-box">
                    <h5>
                    @Category[i].Title
                    </h5>
                    <div class="product_info">
                    </div>
                </div>
                </div>
          
            </div>
          }
      </div>
    </div>
  </section>