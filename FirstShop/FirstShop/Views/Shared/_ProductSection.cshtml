@model FirstShop.Core.ViewModels.Products.ProductViewModel
@inject FirstShop.Core.Services.Products.Product.IProductServices _productServices
@{
    var products = _productServices.GetNineProducts();

}

<section class="product_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Our Products
        </h2>
      </div>
      <div class="row">
          @foreach(var item in products)
          {
            <div class="col-sm-4 col-lg-4">
                <div class="box">
                <div class="img-box">
                    <img src="/Images/@item.ProductImage" alt="Product Image"/>
                    <a href="/Product_Detail/@item.Id" class="add_cart_btn">
                    <span>
                        Go to detail
                    </span>
                    </a>
                </div>
                <div class="detail-box">
                    <h5>
                    @item.Title
                    </h5>
                    <div class="product_info">
                    <h5>
                        <span>$</span> @item.Price
                    </h5>
                    <div class="star_container">
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                    </div>
                    </div>
                </div>
                </div>
          
            </div>
          }
      </div>
      <div class="btn_box">
        <a href="/productList" class="view_more-link">
          View More
        </a>
      </div>
    </div>
  </section>