@using FirstShop.Core.ViewModels.Products

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    List<ProductViewModel> products = ViewBag.products as List<ProductViewModel>;
}

<section class="product_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Products
        </h2>
      </div>
    <div class="row">
    @foreach(var item in products)
    {
     
         
            <div class="col-sm-4 col-lg-4">
                <div class="box">
                <div class="img-box">
                    <img src="/Images/@item.ProductImage" alt="Product Image"/>
                    <a href="/Product_Detail/@item.Id" class="add_cart_btn">
                    <span>
                        Open Details
                    </span>
                    </a>
                </div>
                <div class="detail-box">
                    <h5>
                    @item.Title
                    </h5>
                    <div class="product_info">
                    <h5>
                        <span>$</span> @item.Price
                    </h5>
                    
                    </div>
                </div>
                </div>
           </div>
      
    }
    </div>
    </div>
</section>
