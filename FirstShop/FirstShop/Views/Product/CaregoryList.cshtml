@using FirstShop.Core.ViewModels.Products

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    List<CategoryViewModel> Category = ViewBag.Category as List<CategoryViewModel>;
}


<section class="product_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Categories
        </h2>
      </div>
      <div class="row">
     @foreach(var item in Category)
          {
            <div class="col-sm-4 col-lg-4">
                <div class="box">
                <div class="img-box">
                    <img src="/Images/@item.CategoryImage" alt="Product Image"/>
                    <a href="~/CategoryItemList/@item.Id" class="add_cart_btn">
                    <span>
                        Go to category
                    </span>
                    </a>
                </div>
                <div class="detail-box">
                    <h5>
                    @item.Title
                    </h5>
                    <div class="product_info">
                    </div>
                </div>
                </div>
          
            </div>
          }
      </div>
    </div>
  </section>

