@using FirstShop.Core.ViewModels.Blogs

@{
	List<PostViewModel> posts = ViewBag.Posts as List<PostViewModel>;
}

<div class="container">
<div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
	@foreach(var item in posts){
		<input type="hidden" asp-for="@item.Id"/>
													<!--begin::Video-->
													<div class="col-md-5  col-lg-5">
														<img class="embed-responsive-item card-rounded h-275px w-100" src="~/Images/@item.PostImage" allowfullscreen="allowfullscreen"/>
													</div>
													<!--end::Video-->
													<!--begin::Body-->
													<div class="mb-5">
														<!--begin::Title-->
														<a href="/PostPage/@item.Id" class="fs-2 text-gray-900 fw-bold text-hover-primary text-gray-900 lh-base">@item.Title</a>
														<!--end::Title-->
														<!--begin::Text-->
														<div class="fw-semibold fs-5 text-gray-600 text-gray-900 mt-4">
															@item.Summary
														</div>
														<!--end::Text-->
													</div>
													<!--end::Body-->
													<!--begin::Footer-->
													<div class="d-flex flex-stack flex-wrap">
														<!--begin::Item-->
														<div class="d-flex align-items-center pe-2">
															<!--begin::Avatar-->
															<div class="symbol symbol-35px symbol-circle me-3">
																<img alt="" src="/Images/avatar/@item.Avatar">
															</div>
															<!--end::Avatar-->
															<!--begin::Text-->
															<div class="fs-5 fw-bold">
																<a href="pages/user-profile/overview.html" class="text-gray-700 text-hover-primary">@item.Author</a>
																<span class="text-muted">on @item.DateCreated</span>
															</div>
															<!--end::Text-->
														</div>
														<!--end::Item-->
														<!--begin::Label-->
														@*<span class="badge badge-light-primary fw-bold my-2">@item.PostType</span>*@
														<!--end::Label-->
													</div>
													}
													<!--end::Footer-->
												</div>
												</div>