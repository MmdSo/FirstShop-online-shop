@page "{id?}"
@model FirstShop.Pages.AdminPanel.Users.AddUsersModel
@{
}




<div class="col-md-6">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Add User</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" enctype="multipart/form-data" asp-page-handler="AddUser">
            <input type="hidden" asp-for="@Model.IsEdit" name="isEdit" id="isEdit" />
            <input type="hidden" asp-for="userRegistderlistmodel.id" />
            <input type="hidden" asp-for="userRegistderlistmodel.Password" />

            <input type="hidden" asp-for="@Model.errorMessage.type" id="type" name="type" />
            <input type="hidden" asp-for="@Model.errorMessage.message" id="message" name="message" />

            <div class="card-body">


                <div class="form-group col-lg-12">
                    <label>Choose Role</label>
                    <select class="form-control" asp-for="userRegistderlistmodel.RoleId">
                        <option>Role</option>
                        @foreach (var role in Model.roleListModel)
                        {
                            <option value=@role.Id>@role.Title</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="UserName">User Name</label>
                    <input type="UserName" class="form-control" id="UserName" asp-for="userRegistderlistmodel.UserName" placeholder="User Name">
                </div>
                <div class="form-group">
                    <label for="Price">FirstName</label>
                    <input type="FirstName" class="form-control" id="FirstName" asp-for="userRegistderlistmodel.FirstName" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="QuantLastNameity">Last Name</label>
                    <input type="LastName" class="form-control" id="LastName" asp-for="userRegistderlistmodel.LastName" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="QuantLastNameity">job</label>
                    <input type="job" class="form-control" id="LastName" asp-for="userRegistderlistmodel.Job" placeholder="job">
                </div>
                <div class="form-group">
                            <label for="postBody">about you</label>
                            <textarea id="editor" asp-for="userRegistderlistmodel.About" class="form-control form-control-solid" placeholder="About you">
                            </textarea>
                        </div>
                
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="Password" class="form-control" id="Password" asp-for="userRegistderlistmodel.Password" placeholder="Password">
                    </div>
                 
                <div class="form-group">
                    <label for="Summery">Email</label>
                    <input type="Email" class="form-control" id="Email" asp-for="userRegistderlistmodel.Email" placeholder="Email">
                </div>
               <div class="custom-control custom-checkbox">
                          <input class="custom-control-input" type="checkbox" id="customCheckbox1" asp-for="userRegistderlistmodel.Isshow" >
                          <label for="customCheckbox1" class="custom-control-label">Show this user on slider</label>
                        </div>
            </div>
            <!-- /.card-body -->

           
            <div class="card-footer">
                <button type="submit" class="btn btn-info">Submit</button>
                
            </div>
            <!-- /.card-footer -->
           </form>
    </div>
    <!-- /.card -->
    
</div>


@section scripts
{
    <script>
        $(document).ready(function (){
            let msg = $("#message").val();
            let type = $("#type").val();

            if(type == "error")
            {
                ShowToastr("error",msg);
            }
            if(type == "warning")
            {
                ShowToastr("warning",msg);
            }
            if(type == "success")
            {
                ShowToastr("success",msg);
            }
            if(type == "info")
            {
               ShowToastr("info",msg);
            }
        });
        
    </script>

}