@inject FirstShop.Core.Services.Sales.InvoiceHeads.IInvoiceHeadServices _invoiceHead;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var invoiceHead = _invoiceHead.GetAllInvoiceHead().ToList();
}
<div class="row">
     <div class="col-2">

            <partial name="_SideBar" />
        </div>
<div class="col-10">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Your invoices</h3>

                <div class="card-tools">
                  @*<div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>*@
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Product</th>
                      <th>Date</th>
                      <th>Discount</th>
                      <th>Tax</th>
                      <th>Total Price</th>
                    </tr>
                  </thead>
                  <tbody>
                      @foreach(var item in invoiceHead){
                          <input type="hidden" asp-for="@item.Id"/>
                    <tr>
                      <td>@item.Id</td>
                      <td><a href="/UserPanel/Invoice/@item.Id">@item.title</a></td>
                      <td>@item.Pdate</td>
                      <td>@item.Discount</td>
                      <td>@item.Tax</td>
                      <td>@item.TotalPrice</td>
                    </tr>
                      }
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          </div>